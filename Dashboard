    <script>
        // Datos extraídos de tu CSV
        const ventas = [
            { sup: "MAGDALENA", prom: "ANGELICA TRONCOSO", estado: "CERRADA", banco: "ESTADO" },
            { sup: "ALEXIS", prom: "YAKSURY CONTRERAS", estado: "FIRMADA", banco: "SANTANDER" },
            { sup: "MAGDALENA", prom: "DANIELA OSORIO", estado: "CERRADA", banco: "SANTANDER" },
            { sup: "MAGDALENA", prom: "LORENA TAPIA", estado: "CERRADA", banco: "SANTANDER" },
            { sup: "ALEXIS", prom: "JOSE MOLINA", estado: "FIRMADA", banco: "ESTADO" }
        ];

        // Llenar Tabla
        const tabla = document.getElementById('tablaVentas');
        ventas.forEach(v => {
            const row = `
                <tr class="border-b hover:bg-gray-50">
                    <td class="p-3 font-bold">${v.sup}</td>
                    <td class="p-3">${v.prom}</td>
                    <td class="p-3">
                        <span class="px-2 py-1 rounded-full text-xs font-bold ${v.estado === 'CERRADA' ? 'bg-green-100 text-green-700' : 'bg-orange-100 text-orange-700'}">
                            ${v.estado}
                        </span>
                    </td>
                    <td class="p-3 text-gray-600">${v.banco}</td>
                </tr>`;
            tabla.innerHTML += row;
        });

        // Gráfico de Pastel
        new Chart(document.getElementById('chartEstado'), {
            type: 'doughnut',
            data: {
                labels: ['Cerrada', 'Firmada', 'Pendiente'],
                datasets: [{
                    data: [11, 6, 1],
                    backgroundColor: ['#EC0000', '#333333', '#CCCCCC']
                }]
            },
            options: { plugins: { legend: { position: 'bottom' } } }
        });

        // Gráfico de Barras
        new Chart(document.getElementById('chartPromotores'), {
            type: 'bar',
            data: {
                labels: ['Angélica T.', 'Yaksury C.', 'Paola Z.', 'Matias A.', 'Lorena T.'],
                datasets: [{
                    label: 'Ventas',
                    data: [5, 5, 3, 2, 1],
                    backgroundColor: '#EC0000'
                }]
            },
            options: { indexAxis: 'y', plugins: { legend: { display: false } } }
        });
    </script>
